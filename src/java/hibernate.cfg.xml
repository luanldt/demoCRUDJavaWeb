<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</property>
    <property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
    <property name="hibernate.connection.url">jdbc:sqlserver://localhost:1433;databaseName=HERP</property>
    <property name="hibernate.connection.username">userhcos</property>
    <property name="hibernate.connection.password">12345678</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <mapping resource="user/pojo/Systemuser.hbm.xml"/>
    <mapping resource="user/pojo/Userdiploma.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
